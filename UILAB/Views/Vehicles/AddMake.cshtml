@model UILAB.Models.VehicleMakeTB

@{
    ViewBag.Title = "AddMake";
    Layout = null;
}
@using (Html.BeginForm("AddMake", "Vehicles", FormMethod.Post, new { enctype = "multipart/form-data", @id = "CreateMakeFormID", onsubmit = "return SubmitForm(this)", role = "form" }))
{
    @Html.AntiForgeryToken()
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
    <div class="modal-body">
        <div class="form-group" id="errorMsg" hidden="hidden">
            <label class="col-sm-3 control-label"></label>
            <div class="col-sm-9">
                <div class="alert alert-danger">
                    <span class="sidenav-icon icon icon-question-circle"></span> Vehicle Make <strong>"@TempData["ErrorMessageModal"]"</strong> Exists...!
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Make <span style="color: red">*</span></label>
            <div class="col-sm-9">
                @Html.EditorFor(model => model.Make, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Make, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label"></label>
            <div class="col-sm-9">
                
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
       @* <a href="#" class="btn btn-success" onclick="CreateMake()">Save </a>
    <input type="submit" value="Save" class="btn btn-success" id="btnSave" name="SaveEntry" />
    <button class="btn btn-danger" data-dismiss="modal" type="button" onclick="Delete()">Continue</button>*@
    </div>
}



