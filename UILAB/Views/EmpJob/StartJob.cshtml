@model UILAB.Models.JobTR

@{
    ViewBag.Title = "StartJob";
    Layout = "~/Views/Shared/_LayoutEmp.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        if('@TempData["ErrorMessage"]' != "")
        {
            $("#errorMsg").show();
        }
        else
        {
            $("#errorMsg").hide();
        }
    });
    var flag = "@TempData["Success"]";
    var flag2 = "@TempData["Deleted"]";
    var flag3 = "@TempData["Updated"]";

    if (flag == "Success") {
        toastr.success('Success!... Item Created')
    }

    if (flag2 == "Deleted") {
        toastr.error('Success!... Item Deleted')
    }

    if (flag3 == "Updated") {
        toastr.success('Success!... Item Updated')
    }

</script>

<div class="layout-content-body">
    <div class="title-bar">
        <div class="title-bar-actions">
            <a href="~/Emp/Dashboard">Dashboard</a> | <a href="~/EmpJob/List">Jobs</a> | @Model.JobTRID
        </div>
        <h5><span style="letter-spacing: 1px; font-weight: 700; text-transform: uppercase">@Model.JobTRID - @Model.PlateNo</span></h5>
    </div>
    <div class="row" id="demo-inputmask">
        <div class="col-md-12">
            <div class="panel m-b-lg" style="border:none">
                <ul class="nav nav-tabs" id="myTab">
                    <li class="active"><a href="#tab1" data-toggle="tab">Info</a></li>
                    <li><a href="#tab2" data-toggle="tab">Assigned Employees</a></li>
                    <li><a href="#tab3" data-toggle="tab">Requested Parts</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade active in" id="tab1">
                        @Html.Action("UpdateJobTask")
                    </div>
                    <div class="tab-pane fade" id="tab2">
                        @Html.Action("EmployeeList")
                    </div>
                    <div class="tab-pane fade" id="tab3">
                        @*@Html.Action("PartList")*@
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
            </div>

            <div class="modal-body">
                <p>You are about to delete one track, this procedure is irreversible.</p>
                <p>Do you want to proceed?</p>
                <p class="debug-url"></p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger" data-dismiss="modal" type="button" onclick="Delete()">Continue</button>
            </div>
        </div>
    </div>
</div>
