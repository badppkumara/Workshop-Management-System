@model UILAB.Models.OrganizationSchemeInfo
@{
    ViewBag.Title = "BusinessInfo";
    Layout = null;
}


<div class="card">
    <div class="card-header">
        @*@Html.ActionLink("Back to List", "List", null, new { @class = "btn btn-sm btn-success" })*@
    </div>
    <div class="card-body">
        <div class="col-md-8">

            @using (Html.BeginForm("BusinessInfo", "SettingBusiness", FormMethod.Post, new { enctype = "multipart/form-data", @id = "CreateFormID", onsubmit = "return SubmitForm(this)", role = "form" }))
                        {
                        @Html.AntiForgeryToken()
                            HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
                        <div class="demo-form-wrapper">

                            <div class="form form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.SegmentInfoID)
                                @Html.HiddenFor(model => model.SegmentID)

                                <div class="form-group" id="errorMsg">
                                    <label class="col-sm-3 control-label"></label>
                                    <div class="col-sm-9">
                                        <div class="alert alert-danger">
                                            <span class="sidenav-icon icon icon-question-circle"></span> Business <strong>"@TempData["ErrorMessage"]"</strong> Exists...!
                                        </div>
                                    </div>
                                </div>

                                @*<div class="form-group">
                                        <label class="col-sm-3 control-label">Segment <span style="color: red">*</span></label>
                                        <div class="col-sm-9">
                                            @Html.DropDownListFor(model => model.SegmentID, ViewBag.SegmentList as SelectList, "--- Select Segment ---", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SegmentID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>*@

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Business Names </label>
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.SegmentName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SegmentName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Address</label>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { placeholder = "No.", @class = "form-control" } })
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { placeholder = "Street", @class = "form-control" } })
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.Address3, new { htmlAttributes = new { placeholder = "City", @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label"></label>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.PostalNo, new { htmlAttributes = new { placeholder = "Postal No", @class = "form-control" } })
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.DropDownListFor(model => model.CountryID, ViewBag.CountryList as SelectList, "--- Select Country ---", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label"></label>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.BuisnessNo, new { htmlAttributes = new { placeholder = "Business No.", @class = "form-control" } })
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.GSTNo, new { htmlAttributes = new { placeholder = "GST No.", @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label"></label>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.Email1, new { htmlAttributes = new { placeholder = "Primary Email", @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email1, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.Email2, new { htmlAttributes = new { placeholder = "Secondary Email", @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email2, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.Email3, new { htmlAttributes = new { placeholder = "More Email", @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email3, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label"></label>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { placeholder = "Primary Email", @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.Fax, new { htmlAttributes = new { placeholder = "Secondary Email", @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Fax, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { placeholder = "More Email", @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label"></label>
                                    <div class="col-sm-9">
                                        <label class="custom-control custom-control-primary custom-checkbox">
                                            <input class="custom-control-input" type="checkbox" name="isactive" id="isactive" checked="checked" value="True">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-label">Is Active</span>
                                        </label>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-sm-3 control-label"></label>
                                    <div class="col-sm-9">
                                        <input type="submit" value="Save" class="btn btn-primary" id="btnSave" name="SaveEntry" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
        </div>
    </div>
</div>



