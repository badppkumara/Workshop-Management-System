
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutEmp.cshtml";
}

<div class="layout-content-body">
    <div class="title-bar">
        <div class="title-bar-actions">
            <select class="selectpicker dropdown" name="period" data-dropdown-align-right="true" data-style="btn-default btn-sm" data-width="fit">
                <option value="#" selected="selected"><span class="icon icon-plus icon-lg icon-fw"></span>Quick Add</option>
                <option value="today">Add a Vehicle</option>
                <option value="yesterday">Create a Custom Job</option>
            </select>
        </div>
        <h1 class="title-bar-title">
            <span class="d-ib">Dashboard</span>
